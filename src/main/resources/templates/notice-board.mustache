{{>layout/header}}

    <link rel="stylesheet" href="/css/board.css">
</head>
<body>

{{>layout/navbar-user}}

<div class="container">
    <div id="main-row" class="row">
        <div id="left-side" class="col-md-1"></div>
        <div id="main" class="col-md-10">
            <div class="title">
                공지사항
                <a title="새로고침" class="reload" onClick="window.location.reload()"><i class="fas fa-redo-alt"></i></a>
            </div>
            <div class="writing-list">
                <input id="write-btn" type="text" onClick="onDisplay()" placeholder="새 글을 작성해 보세요!">
                <div id="new-write" class="new-write" style="display: none">
                    <form action="" method="post">
                        <p class="write-title">
                            자유게시판
                        </p>
                        <p class="write-main">
                            <textarea name="text" class="new-writing" placeholder="새 글을 작성해 보세요!"></textarea>
                        </p>
                        <ul class="write-options">
                            <button type="submit" class="write-end"><center><i class="fas fa-pen-nib"></i></center></button>
                            <li title="익명" class="anonym-user"></li>
                        </ul>
                    </form>
                </div>
                {{#noticeList}}
                    <article>
                        <a class="writing" href="freeboard/{{no}}">
                            <div class="writing-data">
                                <p class="writing-user-time">
                                    <i class="fas fa-user"></i>
                                    {{studNum}}
                                    <time>
                                        {{date}}
                                    </time>
                                </p>
                                <p class="writing-contants">
                                    {{content}}
                                </p>
                            </div>
                        </a>
                    </article>
                {{/noticeList}}
                <div class="write-page">
                    <a href=""><i class="fas fa-angle-left"></i></a>
                    <a href="">1</a>
                    <a href="">2</a>
                    <a href="">3</a>
                    <a href="">4</a>
                    <a href="">5</a>
                    <a href=""><i class="fas fa-angle-right"></i></a>
                </div>
            </div>
        </div>
        <div id="right-side" class="col-md-1"></div>
    </div>
</div>
<script>
    function onDisplay() {
        $('#new-write').show();
        $('#write-btn').hide();
    }
    function offDisplay() {
        $('#new-write').hide();
        $('#write-btn').show();
    }
    function search_check() {
        var search = document.getElementById('free-search').value;

        if (search == "") {
            alert('검색어를 입력하세요!');
            return false;
        }
        else {
            return true;
        }
    }
</script>

{{>layout/footer}}