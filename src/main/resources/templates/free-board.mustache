{{>layout/header}}

    <link rel="stylesheet" href="/css/board.css">
</head>
<body>

{{>layout/navbar}}

<div class="container">
    <div id="main-row" class="row">
        <div id="left-side" class="col-lg-1"></div>
        <div id="main" class="col-md-10">
            <div class="title">
                자유게시판
                <a title="새로고침" class="reload" onClick="window.location.reload()"><i class="fas fa-redo-alt"></i></a>
            </div>
            <div class="writing-list">
                <input id="write-btn" type="text" onClick="onDisplay()" placeholder="새 글을 작성해 보세요!">
                <div id="new-write" class="new-write" style="display: none">
                    <form action="/freeboard/create" method="post">
                        <p class="write-title">
                            자유게시판
<!--                            <input type="text" name="title" placeholder="제목">-->
                        </p>
                        <p class="write-main">
                            <textarea name="context" class="new-writing" placeholder="새 글을 작성해 보세요!"></textarea>
                        </p>
                        <ul class="write-options">
                            <button type="submit" class="write-end"><center><i class="fas fa-pen-nib"></i></center></button>
                            <li title="익명" class="anonym-user"></li>
                        </ul>
                    </form>
                </div>
                {{#articleList}}
                    <article>
                        <a class="writing" href="/freeboard/{{no}}">
                            <div class="writing-data">
                                <p class="writing-user-time">
                                    <i class="fas fa-user"></i>
                                    {{studNum}}
                                    <time>
                                        {{date}}
                                    </time>
                                </p>
                                <p class="writing-contants">
                                    {{content}}
                                </p>
                            </div>
                        </a>
                    </article>
                {{/articleList}}
            </div>
        </div>
        <div id="right-side" class="col-md-1"></div>
    </div>
</div>

<script>
    function onDisplay() {
        $('#new-write').show();
        $('#write-btn').hide();
    }
    function offDisplay() {
        $('#new-write').hide();
        $('#write-btn').show();
    }
</script>

{{>layout/footer}}