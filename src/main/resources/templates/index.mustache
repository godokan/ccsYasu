{{>layout/header}}

<link rel="stylesheet" href="/css/guest.css">
<style>
    .card > .card-title {
        font-size: 15pt;
        text-align: center;
        font-weight: bold;
        margin-top: 5px;
        margin-bottom: 5px;
    }
    #miniyasu {
        color: #2b669a;
    }
    #yellowsky {
        color: #ec971f;
    }
    #smartfarm {
        color: #3c763d;
    }
</style>
</head>
<body>

{{>layout/navbar}}

<div class="container">
    <div id="main-row" class="row">
        <div id="left-side" class="col-md-3">
            <div class="card">
                <form class="login">
                    <h3 class="text-center">
                        커뮤니티 이용은<br>
                        <b>로그인</b>
                        이 필요합니다.
                    </h3>
                    <a href="login" class="login-btn">로그인</a>
                    <a href="signup" class="sign-up-btn">회원가입</a>
                </form>
            </div>
        </div>
        <div id="main" class="col-md-6">
            <div id="main-left-incard" class="col-md-6">
                <div class="card">
                    <div class="bordered">
                        <h3>
                            <a href="/login">공지사항</a>
                        </h3>
                        {{#noticeList}}
                        <a class="card-list" href="notice/{{no}}">
                            <time>{{date}}</time>
                            <p>{{context}}</p>
                        </a>
                        {{/noticeList}}
                    </div>
                </div>

            </div>
            <div id="main-right-incard" class="col-md-6">
                <div class="card" style="margin: 0">
                    <div class="bordered">
                        <h3>
                            <a href="/login">자유게시판</a>
                        </h3>
                        {{#freeList}}
                        <a class="card-list" href="freeboard/{{no}}">
                            <time>{{date}}</time>
                            <div class="text-truncate">{{context}}</div>
                        </a>
                        {{/freeList}}
                    </div>
                </div>
            </div>
        </div>
        <div id="right-side" class="col-md-3">
            <div class="card" style="margin: 0;">
                <div class="bordered">
                    <h3>
                        바로가기
                    </h3>
                </div>
            </div>
            <div class="col-md-12" style="padding:0; margin: 0">
                <div class="card" style="padding: 15px; margin: 0;">
                    <a href="/releases">
                        <div id="miniyasu" class="card-title">
                            미니야수
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-12" style="padding:0; margin: 0">
                <div class="card" style="padding: 15px; margin: 0;">
                    <a href="/releases">
                        <div id="yellowsky" class="card-title">
                            노란하늘
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-12" style="padding:0; margin: 0">
                <div class="card" style="padding: 15px; margin: 0;">
                    <a href="http://ccsyasu.cafe24.com:8083/index">
                        <div id="smartfarm" class="card-title">
                            스마트 팜
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function search_check() {
        var search = document.getElementById('main-search').value;

        if (search == "") {
            alert('검색어를 입력하세요!');
            return false;
        }
        else {
            return true;
        }
    }
</script>

{{>layout/footer}}
