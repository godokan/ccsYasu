{{>layout/header}}

    <link rel="stylesheet" href="/css/board.css">
</head>
<body>

{{>layout/navbar-user}}

<div class="container">
    <div id="main-row" class="row">
        <div id="left-side" class="col-md-2"></div>
        <div id="main" class="col-md-8">
            <div class="title">
                API 상세정보
            </div>
            <div class="writing-list">
                {{#api}}
                <article>
                    <div class="writing-data">
                        <p class="writing-user-time">
                            <i class="fas fa-user"></i>
                            {{name}}
                        </p>
                        <p class="writing-contants">
                            {{description}}
                        </p>
                        <p class="writing-comments">
                            {{id}}
                        </p>
                    </div>
                {{/api}}
                <form action="{{id}}/issued" method="post">
                    <button type="submit" class="btn-navy">발급</button>
                </form>
                </article>
            </div>
        </div>
        <div id="right-side" class="col-md-2"></div>
    </div>
</div>
<script>
    function onDisplay() {
        $('#new-write').show();
        $('#write-btn').hide();
    }
    function offDisplay() {
        $('#new-write').hide();
        $('#write-btn').show();
    }
</script>

{{>layout/footer}}